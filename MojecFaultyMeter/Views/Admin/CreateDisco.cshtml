@model MojecFaultyMeter.Models.Discos

@{
    ViewBag.Title = "CreateDisco";
}
<div class="main-content">
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <!-- Textual inputs start -->
                    <div class="col-12 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title">Add Disco</h4>
                                <form action="CreateDisco" method="post">
                                    <div class="form-group">
                                        <label for="example-text-input" class="col-form-label">Disco</label>
                                        <input class="form-control" type="text" name="DiscoName" id="example-text-input">
                                    </div>
                                    <div class="form-group">
                                        <label for="example-search-input" class="col-form-label">Disco Abbreviation</label>
                                        <input class="form-control" type="search" name="DiscoAB" id="example-search-input">
                                    </div>
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-primary" type="submit">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Textual inputs end -->
                    <!-- Radios start -->
                    <!-- button with dropdown end -->
                </div>
            </div>

        </div>
    </div>
    </div>